{
  "name": "sefer2",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "ai_service",
    "scripts"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "setup": "pnpm install",
    "dev": "turbo run dev",
    "dev:2": "chmod +x scripts/dev.sh && ./scripts/dev.sh",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules **/node_modules ai_service/venv"
  },
  "dependencies": {
    "turbo": "^1.10.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.9.0"
}